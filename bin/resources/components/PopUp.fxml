<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootStackPane" prefHeight="680" prefWidth="1157"
	xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.controllers.PopUpController">
	<Pane prefHeight="200.0" prefWidth="200.0"
		style="-fx-background-color: D9D9D9; -fx-opacity: 0.7;" />
	<VBox alignment="CENTER" maxHeight="-Infinity"
		maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
		prefHeight="549.0" prefWidth="983.0"
		style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-background-color: #D9D9D9; -fx-border-color: #6F90AF; -fx-border-width: 2;">
		<padding>
			<Insets />
		</padding>
		<children>
			<Label fx:id="titleLabel"
				style="-fx-font-size: 30; -fx-text-fill: #B23C3C;"
				text="Da li je ovo novi proizvog koji zelite dodati:"
				textFill="#b23c3c">
				<VBox.margin>
					<Insets top="80.0" />
				</VBox.margin>
			</Label>
			<Label fx:id="bodyLabel"
				style="-fx-font-size: 30; -fx-border-color: #303655; -fx-border-width: 1;"
				text="Model     Tip     Au g     Ag g     Cijena     Quantity">
				<VBox.margin>
					<Insets top="60.0" />
				</VBox.margin>
				<padding>
					<Insets bottom="10.0" left="130.0" right="130.0" top="10.0" />
				</padding>
			</Label>
			<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
				<VBox.margin>
					<Insets top="100.0" />
				</VBox.margin>
				<children>
					<Button fx:id="neButton" layoutX="28.0" layoutY="348.0"
						mnemonicParsing="false" onAction="#handleCancellation"
						prefHeight="60.0" prefWidth="138.0"
						styleClass="popup_confirmation_buttons"
						stylesheets="@../css/style.css" text="NE" textFill="#303655">
						<font>
							<Font name="Verdana" size="22.0" />
						</font>
						<cursor>
							<Cursor fx:constant="HAND" />
						</cursor>
						<HBox.margin>
							<Insets right="140.0" />
						</HBox.margin>
					</Button>
					<Button fx:id="daButton" layoutX="28.0" layoutY="348.0"
						mnemonicParsing="false" onAction="#handleConfirmation"
						prefHeight="60.0" prefWidth="138.0"
						styleClass="popup_confirmation_buttons"
						stylesheets="@../css/style.css" text="DA" textFill="#303655">
						<font>
							<Font name="Verdana" size="22.0" />
						</font>
						<cursor>
							<Cursor fx:constant="HAND" />
						</cursor>
					</Button>
				</children>
			</HBox>
		</children>
	</VBox>
</StackPane>
